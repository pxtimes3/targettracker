{
	"name": "targettracker",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "docker compose up -d && vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:start": "docker compose up -d",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"test:unit": "vitest --exclude \"**targettracker.analysis/**\"",
		"test": "npm run test:unit -- --run --coverage",
		"coverage": "vitest run --coverage",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.20.3",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/postcss": "^4.1.1",
		"@tailwindcss/vite": "^4.1.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/eslint": "^9.6.1",
		"@types/luxon": "^3.6.0",
		"@types/node": "^22.14.0",
		"@vitejs/plugin-basic-ssl": "^1.2.0",
		"@vitest/coverage-v8": "^3.1.1",
		"autoprefixer": "^10.4.21",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"jsdom": "^26.0.0",
		"nodemailer": "^6.10.0",
		"pixi-filters": "^6.1.2",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.25.6",
		"svelte-check": "^4.1.5",
		"svelte-radix": "^2.0.1",
		"svelte-turnstile": "^0.10.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.29.0",
		"uuid": "^11.1.0",
		"vite": "^6.2.5",
		"vitest": "^3.1.1",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"@layerstack/tailwind": "^0.0.12",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@sentry/sveltekit": "^9.11.0",
		"@types/nodemailer": "^6.4.17",
		"@types/pg": "^8.11.12",
		"@zxcvbn-ts/core": "^3.0.4",
		"@zxcvbn-ts/language-common": "^3.0.4",
		"@zxcvbn-ts/language-en": "^3.0.2",
		"@zxcvbn-ts/matcher-pwned": "^3.0.4",
		"cookie": "^1.0.2",
		"drizzle-orm": "^0.39.3",
		"exifreader": "^4.27.0",
		"lucide-svelte": "^0.475.0",
		"luxon": "^3.6.1",
		"pg": "^8.14.1",
		"pixi.js": "^8.9.1",
		"postgres": "^3.4.5",
		"svelte-captcha-enhance": "^1.2.1",
		"svelte-sonner": "^0.3.28",
		"svelte-ux": "^1.0.4",
		"ts-luxon": "5.0.7-beta.0"
	},
	"pnpm": {
		"ignoredBuiltDependencies": [
			"exifreader",
			"@sentry/cli"
		],
		"onlyBuiltDependencies": [
			"exifreader",
			"@sentry/cli",
			"esbuild",
			"svelte-preprocess"
		]
	}
}
